include mixins
extends layout
block content   

            include navbar

           
            div
                form.form-horizontal(method='post')
                    fieldset
                        legend Modify user
                        .form-group
                            label.col-lg-2.control-label(for='inputEmail') User name
                            .col-lg-10
                                input#inputEmail.form-control(type='text', disabled='', name='userName', value=results[0].ClientUsername, required='')
                        .form-group
                            label.col-lg-2.control-label(for='inputPassword') Last name
                            .col-lg-10
                                input#inputPassword.form-control(type='text', name='lastName', required='', value=results[0].ContactLastName)
                            label.col-lg-2.control-label(for='inputPassword') First name
                            .col-lg-10
                                input#inputPassword.form-control(type='text', placeholder='', name='firstName', value=results[0].ContactFirstName)
                            label.col-lg-2.control-label(for='inputPassword') Client ID
                            .col-lg-10
                                input#inputPassword.form-control(type='text', placeholder='', name='empID', value=results[0].ClientID)
                            label.col-lg-2.control-label(for='inputPassword') Email
                            .col-lg-10
                                input#inputPassword.form-control(type='text', placeholder='', name='userEmail', value=results[0].ContactEmail)
                        .form-group
                          label.col-lg-2.control-label(for='select') Privilege
                          .col-lg-10
                            select#selecttime.form-control(name='privLevel')
                              option(selected=results[0].PrivLevel == '1') User
                              option(selected=results[0].PrivLevel == '2') Administrator  
                        .form-group
                          label.col-lg-2.control-label(for='select') Status
                          .col-lg-10
                            select.form-control(name='status')
                              option(selected=results[0].Status == '1') Active
                              option(selected=results[0].Status == '2') Suspended
                              option(selected=results[0].Status == '3') Inactive
                        .form-group
                          .col-lg-10.col-lg-offset-2                         
                            button.btn.btn-primary.btn-lg(type='submit') Submit
                       
                        link(rel='stylesheet', href='/javascripts/jquery-ui.css')         
                        link(rel='stylesheet', href='/javascripts/jquery.timepicker.css')
                        
                        