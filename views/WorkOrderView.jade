include mixins
extends layout
block content   

            include navbar

           
            div
                form.form-horizontal(method='post')
                    fieldset
                        legend New Work Order
                        .form-group
                            label.col-lg-2.control-label(for='subject') Work Order Subject
                            .col-lg-10
                                select#subject.form-control(name='Subject')
                                    option(id = 'dropdown 0' selected='' value='') Choose...
                                    option(id = 'dropdown 1' value='Mobss Device') Mobss Device
                                    option(id = 'dropdown 2' value='Mobss Cloud') Mobss Cloud
                                    option(id = 'dropdown 3' value='Mobss Database') Mobss Database
                                    option(id = 'dropdown 4' value='Other') Other
                        .form-group
                            label.col-lg-2.control-label(for='description') Description
                            .col-lg-10
                                textarea#description.form-control(rows='3', name='Description' required='')
                        .form-group
                            label.col-lg-2.control-label(for='contactName') Contact Name
                            .col-lg-10
                                input#contactName.form-control(type='text', placeholder='', name='ContactName' required='')
                        .form-group
                            label.col-lg-2.control-label(for='contactPhone') Contact Phone
                            .col-lg-10  
                                input#contactPhone.form-control(type='text', placeholder='', name='ContactPhone' required='')
                        .form-group
                            label.col-lg-2.control-label(for='contactEmail') Contact Email
                            .col-lg-10  
                                input#contactEmail.form-control(type='text', placeholder='', name='ContactEmail' required='')
                        .form-group
                          .col-lg-10.col-lg-offset-2
                            button#nextButton.btn.btn-primary.btn-lg(type = 'submit') Next
                        link(rel='stylesheet', href='/jqueryui/jquery-ui.css')
                        link(rel='stylesheet', href='/jqueryui/jquery.timepicker.css')
                        script(src='/jqueryui/jquery.timepicker.min.js')
                        script(src='/jqueryui/jquery-ui.js')
                        script.
                            $( function() {
                            $( "#timepicker" ).timepicker({timeFormat : "H:i:s"});
                            } );
                            $( function() {
                            $( "#datepicker" ).datepicker({dateFormat: "yy-mm-dd"});
                            } );