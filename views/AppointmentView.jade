include mixins
extends layout
block content   

            include navbar

            div
                form.form-horizontal(method='post')
                    fieldset
                        legend Schedule A Call
                        .form-group
                            label.col-lg-2.control-label(for='subject') Call Subject
                            .col-lg-10
                                select#subject.form-control(name='Subject' required='')
                                    option(id = 'dropdown 0' selected='' value='') Choose...
                                    option(id = 'dropdown 1' value='Mobss Device') Mobss Device
                                    option(id = 'dropdown 2' value='Mobss Cloud') Mobss Cloud
                                    option(id = 'dropdown 3' value='Mobss Database') Mobss Database
                                    option(id = 'dropdown 4' value='Other') Other
                        .form-group
                            label.col-lg-2.control-label(for='description') Comments
                            .col-lg-10
                                textarea#description.form-control(rows='3', name='Description' required='')
                        .form-group
                            label.col-lg-2.control-label(for='eventDate') Desired date
                            .col-lg-10
                                input#datepicker.form-control(type='text', name='Date', required='')
                            label.col-lg-2.control-label(for='eventTime') Desired time
                            .col-lg-10
                                input#timepicker.form-control(type='text', name='Time', required='')
                        .form-group
                          .col-lg-10.col-lg-offset-2
                            button#nextButton.btn.btn-primary.btn-lg(type = 'submit') Submit
                        link(rel='stylesheet', href='/jqueryui/jquery-ui.css')
                        link(rel='stylesheet', href='/jqueryui/jquery.timepicker.css')
                        script(src='/jqueryui/jquery.timepicker.min.js')
                        script(src='/jqueryui/jquery-ui.js')
                        script.
                            $( function() {
                            $( "#timepicker" ).timepicker({timeFormat : "H:i:s"});
                            } );
                            $( function() {
                            $( "#datepicker" ).datepicker({dateFormat: "yy-mm-dd"});
                            } );