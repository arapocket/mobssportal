include mixins

doctype html
html
    head
        title Mobss Customer Portal
        meta( charset='utf-8' )
        meta( http-equiv='X-UA-Compatible', content='IE=edge' )
        //-meta(http-equiv='content-type', content='application/x-www-form-urlencoding')

        meta( name='viewport', content='width=device-width, initial-scale=1.0' )
        script(src='https://code.jquery.com/jquery-3.3.1.min.js', integrity='sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=', crossorigin='anonymous')
        script( src='/bootstrap/js/bootstrap.min.js' )
        link(href="/bootstrap/css/bootstrap.min.css", rel="stylesheet")
    body(style="padding-bottom:10rem;")
        .container   
            .jumbotron
                        h2 MOBSS Customer Portal
                        h4 Log in to access the customer portal

            form(method='post', enctype='application/x-www-form-urlencoding')          
                
                div
                    br
                    label(for='user') Username &nbsp;
                    input(type='text', name='username')
                    br


                    br
                    label(for='password') Password &nbsp; 
                    input(type='password', name='password')
                    br
                    br
                    button.btn.btn-lg.btn-primary(type="submit") Log in now
                    br
                    br
            h5(style="color: #CC3300;") #{sess.error}                    
            include footer
